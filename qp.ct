  # selectwild gives selectionstring for wildcard select
  def selectwild(self, table, alias):
    gets = []
    for c in self.tb.columns(table):
      s = "%s.%s" % (one(alias, table), c)
      gets.append(f"{s} as '{s}'")
    return ", ".join(gets)
