# findfk finds foreign key from table a to table b
# if more than one, error
def findfk(self, a, b):
  out = None
  for k in self.fkfromt[a]:
    if k.tt == b:
      if out != None: # there is already a fk
        print("error: more than one fk from a to b")
        return None
      out = k
  return out
